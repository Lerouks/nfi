{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "vite",
  "functions": {
    "api/article-og.ts": {
      "includeFiles": "dist/index.html"
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/article/:slug", "destination": "/api/article-og?slug=:slug" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ]
}
